// 根目录的 tsconfig.json
{

    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "lib": ["ES2015", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@module/*": ["packages/*/src"]
      }
    },
    "include": [
      "src",
      "packages/**/*"
    ]
  }
  